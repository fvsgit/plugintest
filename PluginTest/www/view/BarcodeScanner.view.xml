<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="plugintest.controller.BarcodeScanner"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>titBarcodeScanner}" showNavButton="true" navButtonPress="onNavigateBack" class="sapUiResponsiveContentPadding">
				<content>
					<VBox>
            <HBox>
              <Button id="btnScanBacode" text="Scan Barcodes" icon="sap-icon://bar-code" press="onPress_btnScanBacode"></Button>
              <Button id="btnScanBacodePDF" text="Scan PDF 417 Barcodes" icon="sap-icon://bar-code" press="onPress_btnScanBacodePDF"></Button>
            </HBox>
						
						<TextArea value="{ViewModel>/Result}" width="100%" growing="true"></TextArea>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>